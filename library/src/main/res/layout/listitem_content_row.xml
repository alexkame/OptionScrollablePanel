<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/left_recycler_linear_list"
        android:layout_width="150dp"
        android:layout_height="match_parent">
        <com.ranjiexu.optionscrollablepanel.library.BetterRecyclerView
            android:id="@+id/left_recycler_line_list"
            android:animateLayoutChanges="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_column_item"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/execution_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#527ad8"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_recycler_linear_list"
        android:layout_width="150dp"
        android:layout_height="match_parent">
        <com.ranjiexu.optionscrollablepanel.library.BetterRecyclerView
            android:id="@+id/right_recycler_line_list"
            android:animateLayoutChanges="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>

