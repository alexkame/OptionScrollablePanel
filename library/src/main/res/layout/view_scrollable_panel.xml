<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/left_recycler_linear_layout"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                >
                <com.ranjiexu.optionscrollablepanel.library.BetterRecyclerView
                    android:id="@+id/left_recycler_header_list"
                    android:animateLayoutChanges="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/center_recycler_linear_layout"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="执行价"
                    android:textColor="#527ad8"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right_recycler_linear_layout"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                >
                <com.ranjiexu.optionscrollablepanel.library.BetterRecyclerView
                    android:id="@+id/right_recycler_header_list"
                    android:animateLayoutChanges="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


        <com.ranjiexu.optionscrollablepanel.library.BetterRecyclerView
            android:id="@+id/recycler_content_list"
            android:animateLayoutChanges="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>